#app
    position fixed
    top 0
    bottom 0
    left 0
    width 100%

.app-header
    width 100%
    height 50px
    border-bottom 1px solid #ccc
    border-bottom 1px solid #e5e5e5
    background-color rgba(43,44,46,0.95)
    color #FAFAFA

.app-header-title
    font-size 16px
    line-height 50px
    margin-left 45px

.app-greet
    line-height 50px

.app-main
    position absolute
    top 50px
    bottom 0
    width 100%
    background-color #fff

.app-nav
    float left
    width 180px
    height 100%
    border-right 1px solid #eee
    background-color #fafafa
    & > ul
        list-style none
        padding 0
        & > li
            line-height 45px
            height 45px
            text-align center
            & > a
                text-decoration none
                color #555
                width 100%
                display block
                cursor pointer
            &:hover
                background-color #ccc
                & > a
                    color #000

.app-content
    position relative
    overflow scroll
    height 100%
    background #fff
